from tkinter import *
from tkinter import messagebox
def hdsd():
    messagebox.showinfo(title='Hướng dẫn sử dụng',message='1: Vui lòng nhập theo yêu cầu của ứng dụng\n2: Khai báo thông tin phải chính xác\n3: Chọn vấn đề bạn đang mắc phải \n4:Phải xác khai báo')
def nhietdo():
    messagebox.showinfo(title='Thông báo',message='Nhiệt độ của bạn đang ở mức ổn định\nhãy chú ý sức khỏe để phòng chống dịch bệnh và thực hiện thông điệp 5K từ bộ Y Tế')
def nhietdo2():
    messagebox.showinfo(title='Thông báo',message='Bạn Đang bị sốt, có nguy cơ mắc bệnh cao ,.....')
ROOF = Tk()
ROOF.geometry('1300x1000')
ROOF.title('KHAI BAO Y TE VA CHAM SOC BENH NHAN')
ROOF.configure(bg='lavender')
Button(ROOF, text='Hướng dẫn sử dụng',bg='skyblue',command=hdsd).grid(row=0,column=0)
Button(ROOF, text='Gửi ',bg='skyblue').grid(row=0,column=1)
Label(ROOF, text='Họ và Tên:',bg='limegreen').grid(row=1,column=0)
Label(ROOF, text='Số CCCD/CMND:',bg='limegreen').grid(row=2,column=0)
Label(ROOF, text='Số điện thoại liên lạc:',bg='limegreen').grid(row=3,column=0)
Label(ROOF, text='Địa chỉ thường trú:',bg='limegreen').grid(row=4,column=0)
Label(ROOF, text='Phương Tiện di chuyển:',bg='limegreen').grid(row=5,column=0)
Label(ROOF, text='Biển kiểm soát phương tiện:',bg='limegreen').grid(row=6,column=0)
Label(ROOF, text='Nơi đến:',bg='limegreen').grid(row=7,column=0)
Label(ROOF, text='Nơi ở hiện tại(ghi rõ):',bg='limegreen').grid(row=8,column=0)
