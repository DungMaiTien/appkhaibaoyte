print("KHAO SAT NHANH LICH TRINH DI CHUYEN")
s=''
while True:
    ht=input("Nhap HO va TEN(CHU IN HOA khong dau):\n").split()
    ht=s.join(ht)
    if ht.isupper():
        break
while True:
    sdt=input("Nhap so dien thoai lien lac:\n").split()
    sdt=s.join(sdt)
    if sdt.isdigit():
        break
while True:
    cmnd=input("Nhap so cccd/cmnd:\n").split()
    cmnd=s.join(cmnd)
    if cmnd.isdigit():
        break
