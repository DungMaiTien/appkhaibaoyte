Button(ROOF, text='Nhiệt độ  <38°C',bg='skyblue',command=nhietdo).grid(row=12,column=0)
Button(ROOF, text='Nhiệt độ  >= 38°C',bg='skyblue',command=nhietdo2).grid(row=13,column=0)
Label(ROOF, text='THÔNG ĐIỆP 5K:',bg='orange').grid(row=14,column=0)
Label(ROOF, text='1 – KHẨU TRANG: Đeo khẩu trang vải thường xuyên tại nơi công cộng, nơi tập trung đông người\nÐeo khẩu trang y tế tại các cơ sở y tế, khu cách ly.',bg='lavender').grid(row=15,column=0)
Label(ROOF, text='2 – KHỬ KHUẨN: Rửa tay thường xuyên bằng xà phòng hoặc dung dịch sát khuẩn tay\nVệ sinh các bề mặt/ vật dụng thường xuyên tiếp xúc (tay nắm cửa, điện thoại, máy tính bảng, mặt bàn, ghế…)\nGiữ vệ sinh, lau rửa và để nhà cửa thông thoáng.:',bg='lavender').grid(row=16,column=0)
Label(ROOF, text='3 – KHOẢNG CÁCH: Giữ khoảng cách khi tiếp xúc với người khác.:',bg='lavender').grid(row=17,column=0)
Label(ROOF, text='4 – KHÔNG TỤ TẬP đông người',bg='lavender').grid(row=18,column=0)
Label(ROOF, text='5 – KHAI BÁO Y TẾ: thực hiện khai báo y tế trên App NCOVI; cài đặt ứng dụng BlueZone tại địa chỉ\n https://www.bluezone.gov.xn--vn-rma2251a/ được cảnh báo nguy cơ lây nhiễm COVID',bg='lavender').grid(row=19,column=0)
Label(ROOF, text='Lời Khuyên của Bác Sỹ để tự chăm sóc bản thân:',bg='orange').grid(row=20,column=0)
username = Entry(ROOF, width=30)
username.grid(row=1, column=1)
cmnd = Entry(ROOF, width=30)
cmnd.grid(row=2, column=1)
sdt = Entry(ROOF, width=30)
sdt.grid(row=3, column=1)
dc = Entry(ROOF, width=30)
dc.grid(row=4, column=1)
pt = Entry(ROOF, width=30)
pt.grid(row=5, column=1)
bks = Entry(ROOF, width=30)
bks.grid(row=6, column=1)
nd = Entry(ROOF, width=30)
noht = Entry(ROOF, width=30)
haimot = Entry(ROOF, width=30)
